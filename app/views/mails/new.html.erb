<!-- app/views/emails/new.html.erb -->
<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>メールアドレス送信</title>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
</head>
<body>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <h1 class="text-center my-4">メールアドレス送信</h1>
        <%= form_with url: mails_path, class: "needs-validation", method: :post do |form| %>
          <div class="mb-3">
            <%= form.email_field :mail, class: "form-control", placeholder: "メールアドレスを入力してください。", required: true %>
          </div>
          <div class="d-grid">
            <%= form.submit "送信", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</body>
</html>
