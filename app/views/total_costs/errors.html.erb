<h1>原価区分別原価エラー</h1>
<table class="table table-sm">
  <thead>
    <tr>
      <th>名称</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @work_kinds.each do |work_kind| %>
      <tr>
        <td><%=h work_kind.name %></td>
        <td>
            <% if work_kind.other_flag %>
            その他は原価設定できません。
            <% else %>
            <%= link_to '修正', edit_work_kind_path(work_kind), {class: "btn btn-success btn-sm"} %>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div id="btn_toolbar" class="btn-toolbar">
  <div class="btn-group mr-2">
    <%= link_to "戻る", total_cost_path(0), {data: {wait: true, turbo_method: :delete}, class: "btn btn-outline-dark"} %>
  </div>
</div>
