<h1>作業一覧</h1>
<table id="tbl_list" class="table table-sm">
  <thead style="background-color:white;">
    <tr>
      <th></th>
      <% @work_types.each do |work_type| %>
        <th style="text-align: right;"><%= work_type.name %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @cost_types.each do |cost_type| %>
      <tr>
        <th><%= cost_type.name %></th>
        <% @work_types.each do |work_type| %>
          <td class="numeric"><%= @total_costs[[cost_type.id, work_type.id]].to_i.to_s(:delimited) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<div id="btn_toolbar" class="btn-toolbar">
  <div class="btn-group mr-2">
    <%= link_to "戻る", total_costs_path, {class: "btn btn-outline-dark"}%>
  </div>
</div>
