<h1>薬剤種別マスタ一覧</h1>
<% if @chemical_types.count > 0 %>
<table class="list">
  <tr>
    <th>薬剤種別名</th>
    <th colspan="2">&nbsp;</th>
  </tr>

<% @chemical_types.each do |chemical_type| %>
  <tr>
    <td><%=h chemical_type.name %></td>
    <td><%= link_to '修正', edit_chemical_type_path(chemical_type) %></td>
    <td><%= chemical_type.delete_link %></td>
  </tr>
<% end %>
</table>
<% end %>
<%= button_tag "新規登録",  type: :button, :onclick => raw("javascript:location.href = '" + new_chemical_type_path + "';") %>
<%= button_tag "戻る",  type: :button, :onclick => raw("javascript:location.href = '" + root_path + "';") %>
