<h1>作業予定一覧</h1>
<table id="schedule_list" class="table table-sm table-hover">
  <thead>
  <tr>
    <th>作業予定日</th>
    <th>分類</th>
    <th>内容</th>
    <th>作業予定者</th>
  </tr>
  </thead>
  <tbody>
    <% @schedules.each do |schedule| %>
      <tr style="cursor:pointer;" data-url="<%= schedule_path(schedule) %>">
        <td><%= schedule.worked_at %></td>
        <td><%= schedule.genre_name %></td>
        <td><%= schedule.name %></td>
        <td><%= schedule.worker_names %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate(@schedules) %>
<div class="btn-toolbar">
  <div class="btn-group mr-2">
    <%= button_tag "新規登録",  type: :button, :onclick => raw("javascript:location.href = '" + new_schedule_path + "';"), class: "btn btn-success" %>
  </div>
  <div class="btn-group mr-2">
    <%= button_tag "戻る",  type: :button, :onclick => raw("javascript:location.href = '" + menu_index_path + "';"), class: "btn btn-outline-dark" %>
  </div>
</div>
<script type="text/javascript">
$(function () {
  $("#schedule_list tbody tr").click(function() {
    location.href = $(this).data("url");
  });
});
</script>
