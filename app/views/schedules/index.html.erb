<h1>作業予定一覧</h1>
<table id="schedule_list" class="table table-sm">
  <thead>
  <tr>
    <th>作業予定日</th>
    <th>分類</th>
    <th>内容</th>
    <th>作業予定者</th>
    <% if current_user.manageable? %>
    <th>&nbsp;</th>
    <% end %>
    <% if current_user.checkable? %>
    <th>&nbsp;</th>
    <% end %>
  </tr>
  </thead>
  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.worked_at %></td>
        <td><%= schedule.genre_name %></td>
        <td><%= schedule.name %></td>
        <td><%= schedule.worker_names %></td>
        <% if current_user.manageable? %>
        <td><%= link_to '修正', edit_schedule_path(schedule), {class: "btn btn-success btn-sm"} %></td>
        <% end %>
        <% if current_user.checkable? %>
        <td><%= link_to '予定者', new_schedule_worker_path(schedule_id: schedule), {class: "btn btn-success btn-sm"} %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate(@schedules) %>
<div class="btn-toolbar">
  <% if current_user.manageable? %>
    <div class="btn-group mr-2">
      <%= button_tag "新規登録",  type: :button, :onclick => raw("javascript:location.href = '" + new_schedule_path + "';"), class: "btn btn-success" %>
    </div>
  <% end %>
  <div class="btn-group mr-2">
    <%= button_tag "戻る",  type: :button, :onclick => raw("javascript:location.href = '" + menu_index_path + "';"), class: "btn btn-outline-dark" %>
  </div>
</div>
<script type="text/javascript">
$(function () {
  $("#schedule_list tbody tr").click(function() {
    location.href = $(this).data("url");
  });
});
</script>
