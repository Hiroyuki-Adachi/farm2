<h1 class="page-header">作業予定者設定</h1>
<%= javascript_include_tag 'schedule-workers.js' %>
<%= error_print(@schedule) %>

<%= form_for(@schedule.model, action: schedule_workers_path(@schedule.model), html: {method: :post}) do |f| %>
  <%= render(:partial => 'schedule', :locals => {:f => f}) %>
  <hr />
  <%= render(:partial => 'form', :locals => {:f => f}) %>

  <div class="btn-toolbar">
    <div class="btn-group mr-2">
      <%= f.submit '登録', :name => 'regist', class: "btn btn-warning" %>
    </div>
    <div class="btn-group mr-2">
      <%= button_tag "戻る",  type: :button, :onclick => raw("javascript:location.href = '" + schedules_path + "';"), class: "btn btn-outline-dark" %>
    </div>
  </div>
<% end %>
