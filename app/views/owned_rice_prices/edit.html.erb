<h1>保有米単価マスタ(<%= current_term %>年度)(<%= @owned_rice_price.work_type.name %>)</h1>
<%= error_print(@owned_rice_price) %>
<%= form_for(@owned_rice_price) do |f| %>
  <div class="row">
    <div class="col-md-3 mb-3">
      <%= f.label :name, class: "col-form-label-lg form-label" %>
      <%= f.text_field :name, {maxlength: 10, size: 20, class: "form-control"} %>
    </div>
    <div class="col-md-2 mb-3">
      <%= f.label :short_name, class: "col-form-label-lg form-label" %>
      <%= f.text_field :short_name, {maxlength: 5, size: 10, class: "form-control"} %>
    </div>
    <div class="col-md-2 mb-3">
      <%= f.label :display_order, class: "col-form-label-lg form-label" %>
      <%= f.number_field :display_order, {maxlength: 3, size: 3, required: true, min: 0, max: 999, class: "form-control"} %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 mb-3">
      <%= f.label :owned_price, class: "col-form-label-lg form-label" %>
      <%= f.number_field :owned_price, {step: 1, max: 99999, min: 0, size: 5, required: true, class: "form-control"} %>
    </div>
  </div>
  <%= f.hidden_field(:term) %>
  <%= f.hidden_field(:work_type_id) %>
<div class="btn-toolbar">
  <div class="btn-group mr-2">
    <%= f.submit '登録', class: "btn btn-warning" %>
  </div>
  <% unless @owned_rice_price.new_record? %>
    <div class="btn-group mr-2">
      <%= link_to '削除', @owned_rice_price, {data: {turbo_confirm: "本当に削除してもよろしいですか?", turbo_method: :delete}, class: "btn btn-danger"} %>
    </div>
  <% end %>
  <div class="btn-group mr-2">
    <%= link_to "戻る", owned_rice_prices_path, {class: "btn btn-outline-dark"}%>
  </div>
</div>
<% end %>
