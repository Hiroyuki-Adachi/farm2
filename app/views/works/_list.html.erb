<table class="table table-sm">
  <thead>
  <tr>
    <th>作業日</th>
    <th>時刻</th>
    <th>分類</th>
    <th>内容</th>
    <th>人数</th>
    <th>工数</th>
  </tr>
  </thead>
  <tbody>
    <% @works.each do |work| %>
      <tr>
        <td><%= work.worked_at %></td>
        <td><%= work.work_time %></td>
        <td><%= work.genre_name %></td>
        <td><%= link_to(work.name, {action: :show, id: work}) %></td>
        <td class="numeric"><%= @count_workers[work.id] || 0 %></td>
        <td class="numeric"><%= @sum_hours[work.id] || 0 %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th colspan="3">合計</th>
      <td class="numeric"><%= @works_count %>件</td>
      <td class="numeric"><%= @count_workers.values.inject(:+) %></td>
      <td class="numeric"><%= @sum_hours.values.inject(:+) %></td>
    </tr>
  </tfoot>
</table>
<%= paginate @works, remote: true %>
