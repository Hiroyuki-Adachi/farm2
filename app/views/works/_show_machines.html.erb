<div id="content_machines" class="content">
  <table id="detail_machines">
    <thead>
    <tr>
      <th style="width:180px;">機械名</th>
      <th style="width:60px;">稼働</th>
      <th style="width:180px;">オペレーター</th>
      <th style="width:300px;">備考(ヒヤリ・ハット含む)</th>
    </tr>
    </thead>
    <tbody>
      <% [current_organization.machines_count, @machines.count].max.times do |i| %>
      <tr>
        <td class="machine"><%= @machines[i] ? @machines[i].usual_name : "" %></td>
        <td class="machine numeric"><%=@machines[i] ? @machines[i].hours(@results.object) : "" %></td>
        <td class="machine"><%= @machines[i] ? @machines[i].operators(@work) : "" %></td>
        <td class="machine"><%= @machines[i] ? @machines[i].remarks(@work) : "" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div id="cover_machines" class="cover" onclick="location.href='<%=raw new_work_machine_path(work_id: @work) %>'"></div>
</div>
