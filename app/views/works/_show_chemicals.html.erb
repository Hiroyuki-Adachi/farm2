<div class="pagebreak"></div>
<div id="content_chemicals" class="content">
  <div class="sub_title">※使用薬剤</div>
  <table id="detail_chemicals" style="width:720px;">
    <thead>
    <tr>
      <th style="width:100px;">種別</th>
      <th style="width:380px;">名称</th>
      <th style="width:70px;">使用量</th>
      <th style="width:70px;">(10a当)</th>
    </tr>
    </thead>
    <tbody>
      <% ([current_organization.chemicals_count, @chemicals.count].max - 1).times do |i| %>
        <% if @chemicals[i] %>
          <% chemical = Chemical.find(@chemicals[i][0]) %>
          <td class="chemical"><%= chemical.chemical_type.name %></td>
          <td class="chemical"><%= chemical.name %></td>
          <td class="chemical numeric"><%= @chemicals[i][1] %><%= chemical.unit %></td>
          <td class="chemical numeric"><%= chemical_per_area(@work, @chemicals[i][1], chemical) %></td>
        <%  else %>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div id="cover_chemicals" class="cover" onclick="location.href='<%=raw edit_chemicals_work_path(@work) %>'"></div>
</div>
