<div class="form-row">
  <div class="form-group col-md-4">
    <%= f.label :worked_at, '', class: "col-form-label-lg" %>
    <%= f.date_field :worked_at, {required: true, class: "form-control", max: @system.end_date} %>
  </div>
  <div class="form-group col-md-2">
    <%= f.label :weather_id, '', class: "col-form-label-lg" %>
    <%= f.select(:weather_id, @weathers.map {|weather| [weather.name, weather.id]}, {}, {class: "form-control"}) %>
  </div>
  <div class="form-group col-md-2">
    <%= f.label :start_at, '', class: "col-form-label-lg" %>
    <%= f.time_field :start_at, {step: 1800, required: true, class: "form-control"} %>
  </div>
  <div class="form-group col-md-2">
    <%= f.label :end_at, '', class: "col-form-label-lg" %>
    <%= f.time_field :end_at, {step: 1800, required: true, class: "form-control"} %>
  </div>
</div>
<div class="form-row">
  <div class="form-group col-md-12">
    <%= f.label :work_type_id, '', class: "col-form-label-lg" %>
  </div>
  <div class="form-row">
    <% WorkType.categories.each do |category| %>
      <div class="form-group col-md-1">
        <div class="form-check form-check-inline h5">
          <%= category.name %>
        </div>
      </div>
      <div class="form-group col-md-11">
        <% WorkType.select_category(category).each do |work_type| %>
          <div class="form-check form-check-inline">
            <%= f.radio_button :work_type_id, work_type.id, {id: "work_type_#{work_type.id}", class: "form-check-input"} %>
            <%= label_tag "work_type_#{work_type.id}", work_type.name, {class: "form-check-label"} %>
          </div>        
        <% end %>
      </div>
    <% end %>    
  </div>
</div>
<div class="form-row">
  <div class="form-group col-md-4">
    <%= f.label :work_kind_id, '', class: "col-form-label-lg" %>
    <%= f.collection_select(:work_kind_id, @work_kinds, :id, :name, {}, {class: "form-control"}) %>
  </div>
  <div class="form-group col-md-4">
    <%= f.label :name, '', class: "col-form-label-lg" %>
    <%= f.text_field :name, {:maxlength => 40, :size => 40, class: "form-control"} %>
  </div>
</div>
<div class="form-row">
  <div class="form-group col-md-8">
    <%= f.label :remarks, '', class: "col-form-label-lg" %>
    <%= f.text_area :remarks, {:rows => 3, :cols => 40, class: "form-control"} %>
  </div>
</div>
<script type="text/javascript">
$(function() {
  $('input[name="work[work_type_id]"]:radio').change(function(){
    $.get("<%= work_type_select_works_path %>", {work_type_id: $(this).val()});
  });
});
</script>
<%= hidden_field_tag :page, params[:page] %>
<%= hidden_field_tag :month, params[:month] %>
