<%= error_print(@genre) %>
<%= form_with(model: @genre) do |f| %>
<div class="row">
  <div class="mb-3 col-md-4">
    <%= f.label :name, class: "col-form-label-lg form-label" %>
    <%= f.text_field :name, {maxlength: 10, required: true, class: "form-control"} %>
  </div>
  <div class="mb-3 col-md-2">
    <%= f.label :work_category_id, class: "col-form-label-lg form-label" %>
    <%= f.collection_select :work_category_id,
      WorkCategory.usual,
      :id,
      :name,
      { include_blank: true },
      { class: "form-select", required: true } %>
  </div>
  <div class="mb-3 col-md-2">
    <%= f.label :display_order, class: "col-form-label-lg form-label" %>
    <%= f.number_field(:display_order, {max: 9999, min: 0, required: true, class: "form-control"}) %>
  </div>
</div>
<div class="btn-toolbar">
  <div class="btn-group mr-2">
    <%= f.submit '登録', class: "btn btn-warning" %>
  </div>
  <% if !@genre.new_record? && !@genre.work_types.kept.any? %>
    <div class="btn-group mr-2">
      <%= link_to '削除', @genre, {data: {turbo_confirm: "本当に削除してもよろしいですか?", turbo_method: :delete}, class: "btn btn-danger"} %>
    </div>
  <% end %>
  <div class="btn-group mr-2">
    <%= link_to "戻る", work_categories_path, {class: "btn btn-outline-dark"}%>
  </div>
</div>
<% end %>
