<%= error_print(@category) %>
<%= form_with(model: @category) do |f| %>
<div class="row">
  <div class="mb-3 col-md-4">
    <%= f.label :name, class: "col-form-label-lg form-label" %>
    <%= f.text_field :name, {maxlength: 10, required: true, class: "form-control"} %>
  </div>
  <div class="mb-3 col-md-2">
    <%= f.label :display_order, class: "col-form-label-lg form-label" %>
    <%= f.number_field(:display_order, {max: 9999, min: 0, required: true, class: "form-control"}) %>
  </div>
</div>
<div class="btn-toolbar">
  <div class="btn-group mr-2">
    <%= f.submit '登録', class: "btn btn-warning" %>
  </div>
  <% if !@category.new_record? && !@category.genres.kept.any? %>
    <div class="btn-group mr-2">
      <%= link_to '削除', @category, {data: {turbo_confirm: "本当に削除してもよろしいですか?", turbo_method: :delete}, class: "btn btn-danger"} %>
    </div>
  <% end %>
  <div class="btn-group mr-2">
    <%= link_to "戻る", work_categories_path, {class: "btn btn-outline-dark"}%>
  </div>
</div>
<% end %>
