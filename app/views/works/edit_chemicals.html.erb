<h1>作業日報(薬剤)登録</h1>
<%= error_print(@work) %>

<%= form_for(@work.model, url: {action: :update }, html: {method: :put}) do |f| %>
  <%= render(:partial => 'show_work', :locals => {:f => f}) %>
  <% group_count = [@work.work_chemicals.maximum(:chemical_group_no).to_i, current_organization.chemical_group_count].max %>
  <div class="row">
    <div class="col-md-2 h3">総面積</div>
    <div class="col-md-2 h3"><%= @work.sum_areas %>a</div>
    <div class="col-md-8 form-group">
      <% group_count.times do |index| %>
        <div class="form-check-inline">
          <%= radio_button_tag "col_group", index, index == 0, {class: "form-check-input", onchange: "changeGroup(#{index})"} %>
          <%= label_tag "col_group_#{index}", "#{index + 1}グループ", {class: "form-check-label"} %>
        </div>
      <% end %>
    </div>
  </div>
  <h2>薬剤</h2>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-sm">
        <thead>
          <tr>
            <th>種別</th>
            <th>名称</th>
            <% group_count.times do |index| %>
            <th class="col-data" data-index="<%= index%>" style="display:none;">10a当</th>
            <th class="col-data" data-index="<%= index%>" style="display:none;">希釈</th>
            <th class="col-data" data-index="<%= index%>" style="display:none;">希釈倍率</th>
            <th class="col-data" data-index="<%= index%>" style="display:none;" colspan="3">使用量</th>
            <th class="col-data" data-index="<%= index%>" style="display:none;"></th>
            <th class="col-data" data-index="<%= index%>" style="display:none;">成分</th>
            <th class="col-data" data-index="<%= index%>" style="display:none;">備考</th>
            <% end %>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @chemicals.each do |chemical| %>
        <tr>
          <td><%= chemical.name %></td>
          <td><%= chemical.chemical_type.name %></td>
          <% group_count.times do |index| %>
            <% work_chemical = @work.work_chemicals.find_by(chemical_id: chemical.id, chemical_group_no: index + 1) %>
            <td class="text-center col-data" data-index="<%= index%>" style="display:none;">
              <%= check_box_tag "chemicals[#{chemical.id}][#{index + 1}][area_flag]", true, work_chemical&.area_flag, {class: "form-check-input"} %>
            </td>
            <td class="text-center col-data" data-index="<%= index%>" style="display:none;">
              <%= check_box_tag "chemicals[#{chemical.id}][#{index + 1}][aqueous_flag]", true, work_chemical&.aqueous_flag, {class: "form-check-input"} %>
            </td>
            <td class="col-data"  data-index="<%= index%>" style="display:none;">
              <%= number_field_tag "chemicals[#{chemical.id}][#{index + 1}][magnification]", work_chemical&.magnification, {min: 0, max: 9999.9, step: 0.1, class: "form-control form-control-sm narrow"} %>
            </td>
            <td class="col-data" data-index="<%= index%>" style="display:none;">
              <%= number_field_tag "chemicals[#{chemical.id}][#{index + 1}][dilution_amount]", work_chemical&.dilution_amount, {min: 0, max: 9999.9, step: 0.1, class: "form-control form-control-sm narrow"} %>
            </td>
            <td class="col-data" data-index="<%= index%>" style="display:none;">&#8467;</td>
            <td class="col-data" data-index="<%= index%>" style="display:none;">
              <%= number_field_tag "chemicals[#{chemical.id}][#{index + 1}][quantity10]", work_chemical&.quantity10, {min: 0, max: 9999.9, step: 0.1, class: "form-control form-control-sm narrow"} %>
            </td>
            <td class="col-data" data-index="<%= index%>" style="display:none;"><%= chemical.unit %></td>
            <td class="col-data" data-index="<%= index%>" style="display:none;">
              <%= number_field_tag "chemicals[#{chemical.id}][#{index + 1}][quantity]", work_chemical&.quantity, {min: 0, max: 9999.9, step: 0.1, class: "form-control form-control-sm narrow"} %>
            </td>
            <td class="col-data" data-index="<%= index%>" style="display:none;">
            <%= text_field_tag "chemicals[#{chemical.id}][#{index + 1}][remarks]", work_chemical&.remarks, class: "form-control form-control-sm" %>
            </td>
          <% end %>
        </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="btn-toolbar">
    <div class="btn-group mr-2">
      <%= f.submit '登録', :name => 'regist_chemicals', class: "btn btn-warning" %>
    </div>
    <div class="btn-group mr-2">
      <%= link_to '戻る', work_path(@work.model), {class: "btn btn-outline-dark"} %>
    </div>
  </div>
<% end %>
<script>
window.addEventListener("DOMContentLoaded", (event) => {
  document.querySelectorAll("[data-index='0']").forEach((element) => {
    element.style.display = "table-cell";
  });
});

function changeGroup(group)
{
  document.querySelectorAll(".col-data").forEach((element) => {
    element.style.display = "none";
  });
  document.querySelectorAll(`[data-index="${group}"]`).forEach((element) => {
    element.style.display = "table-cell";
  });
}
</script>
