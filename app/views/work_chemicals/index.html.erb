<h1>作業別薬剤使用料一覧</h1>
<%= button_tag "戻る",  type: :button, :onclick => raw("javascript:location.href = '" + root_path + "';") %>
<%= stylesheet_link_tag 'work-lists', :media => 'all' %>
<table class="list">
  <thead>
    <tr>
    <th rowspan="3">作業日</th>
    <th rowspan="3">作業種別</th>
    <th rowspan="3">作業内容</th>
    <% @chemicals.each do |chemical| %>
      <th><%= chemical.chemical_type.name %></th>
    <% end %>
    </tr>
    <tr>
    <% @chemicals.each do |chemical| %>
      <th><%= chemical.name.slice(0, 5) %></th>
    <% end %>
    </tr>
    <tr>
    <% @chemicals.each do |chemical| %>
      <th><%= chemical.unit %></th>
    <% end %>
    </tr>
  </thead>
  <tbody>
    <% @works.each do |work| %>
    <tr>
      <td><%= work.worked_at %></td>
      <td><%= work.work_type_name %></td>
      <td style="overflow:hidden;"><%= work.name %></td>
      <% @chemicals.each do |chemical| %>
      <td class="numeric"><%= @work_chemicals["#{work.id},#{chemical.id}"] %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
  <tbody>
    <tr>
      <th colspan="3">合計</th>
      <% @chemicals.each do |chemical| %>
      <td class="numeric"><%= @total_chemicals[chemical.id] %></td>
      <% end %>
    </tr>
  </tbody>
</table>
<%= button_tag "戻る",  type: :button, :onclick => raw("javascript:location.href = '" + root_path + "';") %>
