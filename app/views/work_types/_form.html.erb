<%= error_print(@work_type) %>
<%= form_with(model: @work_type, html: {multipart: true}) do |f| %>
<div class="row">
  <div class="mb-3 col-md-2">
    <%= f.label :name, class: "col-form-label-lg form-label" %>
    <%= f.text_field :name, {maxlength: 10, size: 15, required: true, class: "form-control"} %>
  </div>
  <div class="field mb-3 col-md-2">
    <%= f.label :work_genre_id, class: "col-form-label-lg form-label" %>
    <%= f.collection_select :work_genre_id,
      WorkGenre.usual,
      :id,
      :combined_name,
      { include_blank: true },
      { class: "form-select", required: true } %>
  </div>
</div>
<div class="row">
  <div class="field mb-3 col-md-2">
    <%= f.label :display_order, class: "col-form-label-lg form-label" %>
    <%= f.number_field(:display_order, {maxlength: 4, size: 4, required: true, class: "form-control"}) %>
  </div>
  <div class="field mb-3 col-md-2">
    <%= f.label :bg_color, class: "col-form-label-lg form-label" %>
    <%= f.color_field(:bg_color, {class: "form-control"}) %>
  </div>
  <div class="field mb-3 col-md-2">
    <%= f.check_box(:term_flag, {class: "form-check-input"}, true, false) %>
    <%= f.label :term_flag, class: "form-check-label" %>
  </div>
</div>
<div class="row">
  <div class="field mb-3 col-md-2">
    <%= f.label :land_flag, class: "col-form-label-lg" %>
    <div class="form-check">
      <%= f.radio_button :land_flag, true %>
      <label for="work_type_land_flag_true" class="form-check-label form-label">割り当てる</label>
    </div>
    <div class="form-check">
      <%= f.radio_button :land_flag, false %>
      <label for="work_type_land_flag_false" class="form-check-label form-label">割り当てない</label>
    </div>
  </div>
  <div class="field mb-3 col-md-2">
    <%= f.label :cost_flag, class: "col-form-label-lg" %>
    <div class="form-check">
      <%= f.radio_button :cost_flag, true %>
      <label for="work_type_cost_flag_true" class="form-check-label form-label">原価として扱う</label>
    </div>
    <div class="form-check">
      <%= f.radio_button :cost_flag, false %>
      <label for="work_type_cost_flag_false" class="form-check-label form-label">原価にはしない</label>
    </div>
  </div>
  <div class="field mb-3 col-md-2">
    <%= f.label :work_flag, class: "col-form-label-lg" %>
    <div class="form-check">
      <%= f.radio_button :work_flag, true %>
      <label for="work_type_work_flag_true" class="form-check-label form-label">日報に表示する</label>
    </div>
    <div class="form-check">
      <%= f.radio_button :work_flag, false %>
      <label for="work_type_work_flag_false" class="form-check-label form-label">日報に表示しない</label>
    </div>
  </div>
  <div class="field mb-3 col-md-2">
    <%= f.label :office_role, class: "col-form-label-lg form-label" %>
    <%= f.select(:office_role, enum_options_for(WorkType, :office_role), {}, class: "form-select") %>
  </div>
</div>
<div class="row">
  <div class="field mb-3 col-md-2">
    <%= f.label :icon, class: "col-form-label-lg form-label" %>
    <%= f.file_field(:icon, {class: "form-control-file"}) %>
  </div>
</div>
<div class="btn-toolbar">
  <div class="btn-group mr-2">
    <%= f.submit '登録', class: "btn btn-warning" %>
  </div>
  <div class="btn-group mr-2">
    <%= link_to "戻る", work_types_path, {class: "btn btn-outline-dark"}%>
  </div>
</div>
<% end %>
