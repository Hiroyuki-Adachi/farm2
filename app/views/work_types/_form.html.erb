<%= error_print(@work_type) %>
<%= form_for(@work_type) do |f| %>
<div class="field form-group">
  <%= f.label :name, class: "col-form-label-lg" %>
  <%= f.text_field :name, {maxlength: 10, size: 15, required: true, class: "form-control"} %>
</div>
<div class="field form-group">
  <%= f.label :display_order, class: "col-form-label-lg" %>
  <%= f.number_field(:display_order, {maxlength: 4, size: 4, required: true, class: "form-control"}) %>
</div>
<div class="field form-group">
  <%= f.label :genre, class: "col-form-label-lg" %>
  <%= f.select(:genre, @categories.map {|category| [category.name, category.genre]}, {}, {class: "form-control"}) %>
</div>
<div class="btn-toolbar">
  <div class="btn-group mr-2">
    <%= f.submit '登録', class: "btn btn-warning" %>
  </div>
  <div class="btn-group mr-2">
    <%= button_tag "戻る",  type: :button, :onclick => raw("javascript:location.href = '" + work_types_path + "';"), class: "btn btn-outline-dark" %>
  </div>
</div>
<% end %>
