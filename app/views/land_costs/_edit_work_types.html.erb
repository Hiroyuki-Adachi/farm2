<% WorkType.land.by_term(current_organization.get_term(activate_date)).each do |work_type| %>
  <div class="form-check form-check-inline">
    <%= lcf.radio_button :work_type_id, work_type.id, {
      id: "work_type_#{lcf.index}_#{work_type.id}", class: "form-check-input", onclick: "selectWorktype(this)",
      data: {bg_color: work_type.bg_color_date(current_organization, activate_date),
        fg_color: work_type.fg_color_date(current_organization, activate_date)
      }
      } %>
    <%= label_tag "work_type_#{lcf.index}_#{work_type.id}", work_type.name, {class: "form-check-label form-label"} %>
  </div>
<% end %>
