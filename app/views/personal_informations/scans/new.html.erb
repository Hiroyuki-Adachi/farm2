<div class="container py-4" data-controller="page-loader" data-page-loader-modules-value="pages/personal_informations/scans">
  <h1 class="text-center mb-4">📷 QRコードスキャン</h1>

  <div class="ratio ratio-4x3 bg-dark rounded">
    <video id="video" class="w-100" muted playsinline></video>
  </div>

  <div id="result-box" class="alert alert-info mt-3 d-none">
    <strong>読み取り結果:</strong>
    <p id="qr-result" class="mb-0"></p>
  </div>
</div>
<%= hidden_field_tag :scan_path, personal_information_scans_path(personal_information_token: params[:personal_information_token]) %>
