<%= javascript_pack_tag 'work-show', 'data-turbo-track': 'reload' %>
<%= stylesheet_pack_tag 'work-show', :media => 'all' %>
<%= render partial: "works/show_base" %>
<% if @whole_crop || current_organization.whole_crop_work_kind_id == @work.work_kind_id %>
<%= render partial: "works/show_whole_crop" %>
<% end %>
<%= render partial: "works/show_workers" %>
<% if (@work_lands.count > 0 || @work.work_kind.land_flag) && current_organization.lands_count > 0 %>
  <%= render partial: "works/show_lands" %>
<% end %>
<% if (@machines.count > 0 || @work.work_kind.machine_kinds.count > 0) && current_organization.machines_count > 0 %>
  <%= render partial: "works/show_machines" %>
<% end %>
<% if (@chemicals.count > 0 || @work.work_kind.chemical_kinds.count > 0) && current_organization.chemicals_count > 0 %>
  <%= render partial: "works/show_chemicals" %>
<% end %>
<%= render partial: "works/show_stamp"%>
<script>
window.addEventListener('DOMContentLoaded turbo:load', () => {
    $(".stamp").each(function() {
        $(this).offset({top: $(this).offset().top + 48});
    });
    $("#work_id").offset({top: $("#work_id").offset().top + 48});
});
</script>
