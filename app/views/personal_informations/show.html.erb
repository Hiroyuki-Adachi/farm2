<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
<head>
<title>作業一覧</title>
</head>
<body>
<h1><%= @worker.name %>さんの作業</h1>
<% total_hours = 0 %>
<table>
<tr>
  <th>日付</th>
  <th>内容</th>
  <th>時間</th>
</tr>
<% @results.each do |result| %>
<tr>
  <td><%= result.worked_at_short %></td>
  <td><%= result.work.work_kind.name %></td>
  <td style="text-align:right;"><%= result.hours %></td>
  <% total_hours += result.model.hours %>
</tr>
<% end %>
<tr>
  <th colspan="2">合計</th>
  <td style="text-align:right;"><%= "%.1f"%total_hours %></td>
</tr>
</body>
</html>