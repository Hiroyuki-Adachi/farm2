<h1>集計対象期間変更</h1>
<%= error_print(@system) %>
<%= form_for(@system, url: {controller: :menu, action: :update }, html: {method: :put}) do |f| %>
  <div class="row">
    <div class="mb-3 col-md-2">
      <%= f.month_field :target_from, {required: true, class: "form-control bootstrap-date"} %>
    </div>
    <div class="mb-3 col-md-1">
      <label class="col-form-label-lg form-label">から</label>
    </div>
    <div class="mb-3 col-md-2">
      <%= f.month_field :target_to, {required: true, class: "form-control bootstrap-date"} %>
    </div>
    <div class="mb-3 col-md-1">
      <label class="col-form-label-lg form-label">まで</label>
    </div>
  </div>
  <div class="btn-toolbar">
    <div class="btn-group mr-2">
      <%= f.submit '設定', class: "btn btn-danger" %>
    </div>
    <div class="btn-group mr-2">
      <%= link_to '戻る', menu_index_path, class: "btn btn-outline-dark" %>
    </div>
  </div>
<% end %>
