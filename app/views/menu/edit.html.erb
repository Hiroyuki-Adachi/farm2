<h1>集計対象期間変更</h1>
<%= error_print(@system) %>
<%= form_for(@system, url: {controller: :menu, action: :update }, html: {method: :put}) do |f| %>
  <div class="form-row">
    <div class="form-group col-md-2">
      <%= f.month_field :target_from, {required: true, class: "form-control bootstrap-date"} %>
    </div>
    <div class="form-group col-md-1">
      <label class="col-form-label-lg">から</label>
    </div>
    <div class="form-group col-md-2">
      <%= f.month_field :target_to, {required: true, class: "form-control bootstrap-date"} %>
    </div>
    <div class="form-group col-md-1">
      <label class="col-form-label-lg">まで</label>
    </div>
  </div>
  <div class="btn-toolbar">
    <div class="btn-group mr-2">
      <%= f.submit '設定', class: "btn btn-danger" %>
    </div>
    <div class="btn-group mr-2">
      <%= button_tag "戻る",  type: :button, onclick: raw("javascript:location.href = '" + menu_index_path + "';"), class: "btn btn-default" %>
    </div>
  </div>
<% end %>
