<h1>対象年度変更</h1>
<% if @system.errors.any? %>
  <div id="error_explanation">
    <h2><%= @system.errors.count %>件のエラーがあります。</h2>
 
    <ul>
    <% @system.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@system, url: {controller: :menu, action: :update }, html: {method: :put}) do |f| %>
  <%= f.select(:term, @terms) %>年度
  <br />
  <p>
  <%= f.submit '設定' %>
  <%= button_tag "戻る",  type: :button, :onclick => raw("javascript:location.href = '" + root_path + "';") %>
  </p>
<% end %>
