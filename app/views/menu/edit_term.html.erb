<h1>対象年度変更</h1>
<%= error_print(@system) %>
<%= form_for(@system, url: {controller: :menu, action: :update }, html: {method: :put}) do |f| %>
  <div class="row">
    <div class="col-md-2">
      <%= f.select(:term, @terms, {}, {class: "form-select"}) %>
    </div>
  </div>
  <div class="btn-toolbar">
    <div class="btn-group mr-2">
      <%= f.submit '設定', class: "btn btn-danger" %>
    </div>
    <div class="btn-group mr-2">
      <%= link_to "戻る", menu_index_path, {class: "btn btn-outline-dark"}%>
    </div>
  </div>
<% end %>
