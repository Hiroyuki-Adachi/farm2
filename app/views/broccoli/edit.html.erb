<h1 class="page-header">ブロッコリー収量</h1>
<%= error_print(@broccoli) %>

<%= form_for(@broccoli.model, :url => {action: :update}, html: {method: :put}) do |f| %>
  <%= render(:partial => 'form', :locals => {:f => f}) %>
  <div class="btn-toolbar">
    <div class="btn-group mr-2">
      <%= f.submit '登録', :name => 'regist', class: "btn btn-warning" %>
    </div>
    <% unless @broccoli.new_record? %>
    <div class="btn-group mr-2">
      <%= link_to '削除',raw(broccoli_path(work_id: @broccoli.work_id, page: params[:page], month: params[:month])), method: :delete, class: "btn btn-danger", data: {confirm: "本当に削除してもよろしいですか?"} %>
    </div>
    <% end %>
    <div class="btn-group mr-2">
      <%= button_tag "戻る",  type: :button, :onclick => raw("javascript:location.href = '" + work_path(id: params[:work_id], page: params[:page], month: params[:month]) + "';"), class: "btn btn-outline-dark" %>
    </div>
  </div>
<% end %>
