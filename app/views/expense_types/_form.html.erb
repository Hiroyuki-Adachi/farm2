<%= error_print(@expense_type) %>
<%= form_for(@expense_type) do |f| %>
<div class="row">
  <div class="mb-3 col-md-2">
    <%= f.label :name, class: "col-form-label-lg form-label" %>
    <%= f.text_field :name, {maxlength: 10, size: 15, required: true, class: "form-control"} %>
  </div>
  <div class="field mb-3 col-md-2">
    <%= f.label :display_order, class: "col-form-label-lg form-label" %>
    <%= f.number_field(:display_order, {maxlength: 4, size: 4, required: true, class: "form-control"}) %>
  </div>
</div>
<div class="row">
  <div class="field mb-3 col-md-12">
    <div class="form-check form-check-inline">
      <%= f.check_box :chemical_flag, {class: "form-check-input"}, true, false %>
      <%= f.label :chemical_flag, class: "col-form-label-lg form-label" %>
    </div>
    <div class="form-check form-check-inline">
      <%= f.check_box :other_flag, {class: "form-check-input"}, true, false %>
      <%= f.label :other_flag, class: "col-form-label-lg form-label" %>
    </div>
    <div class="form-check form-check-inline">
      <%= f.check_box :sales_flag, {class: "form-check-input"}, true, false %>
      <%= f.label :sales_flag, class: "col-form-label-lg form-label" %>
    </div>
  </div>
</div>
<div class="btn-toolbar">
  <div class="btn-group mr-2">
    <%= f.submit '登録', class: "btn btn-warning" %>
  </div>
  <div class="btn-group mr-2">
    <%= link_to "戻る", expense_types_path, {class: "btn btn-outline-dark"}%>
  </div>
</div>
<% end %>
