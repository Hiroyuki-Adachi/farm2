<h1>作業種別マスタ一覧</h1>
<table class="table table-sm">
  <thead>
    <tr>
      <th>名称</th>
      <th style="text-align:right;">作業単価</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @work_kinds.each do |work_kind| %>
      <tr>
        <td><%=h work_kind.name %></td>
        <td class="numeric"><%=h number_to_currency(work_kind.term_price(current_term), unit: '') %></td>
        <td><%= link_to '修正', edit_work_kind_path(work_kind), {class: "btn btn-success btn-sm"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate(@work_kinds) %>
<div class="btn-toolbar">
  <div class="btn-group mr-2">
    <%= link_to "新規登録", new_work_kind_path, {class: "btn btn-success"}%>
  </div>
  <div class="btn-group mr-2">
    <%= link_to "戻る", menu_index_path, {class: "btn btn-outline-dark"}%>
  </div>
</div>
