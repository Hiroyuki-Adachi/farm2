<%= error_print(@work_kind) %>
<%= form_for(@work_kind) do |f| %>
 <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, {maxlength: 40, size: 20, required: true} %>
 </div>
 <div class="field">
    <%= f.label :display_order %><br />
    <%= f.number_field :display_order, {min: 0, max: 9999, step: 1, required: true} %>
 </div>
 <div class="field">
    <%= f.label :price %><br />
    <%= f.number_field :price, {min: 0, max: 9999, step: 1, required: true} %>
 </div>
 <br />
 <div class="field">
 <% if @organization.lands_count > 0 %>
    <%= f.label :land_flag %>
    <%= f.check_box :land_flag %>
 <% else %>
   <%= f.hidden_field land_flag, false %>
 <% end %>
 </div>
 <div class="field">
 <fieldset>
    <legend>該当作業</legend>
  <% @work_types.each do |work_type| %>
    <span class="check_group">
      <%= check_box_tag "work_types[]", work_type.id, @work_kind.work_types.include?(work_type), {:id => nil} %><!--
    --><%=h work_type.name %>
    </span>
  <% end %>
  </fieldset>
  </div>
  <% if @organization.machines_count > 0 %>
    <div class="field">
    <fieldset>
        <legend>使用機械種別</legend>
      <% @machine_types.each do |machine_type| %>
        <span class="check_group">
          <%= check_box_tag "machine_types[]", machine_type.id, @work_kind.machine_types.include?(machine_type), {:id => nil} %><!--
        --><%=h machine_type.name %>
        </span>
      <% end %>
      </fieldset>
    </div>
  <% end %>
  <% if @organization.chemicals_count > 0 %>
  <div class="field">
  <fieldset>
      <legend>使用薬品種別</legend>
      <% @chemical_types.each do |chemical_type| %>
        <span class="check_group">
          <%= check_box_tag "chemical_types[]", chemical_type.id, @work_kind.chemical_types.include?(chemical_type), {:id => nil} %><!--
        --><%=h chemical_type.name %>
        </span>
      <% end %>
    </fieldset>
    </div>
 <% end %>
 <br />
 <div class="actions">
    <%= f.submit '登録' %>
    <%= button_tag "戻る",  type: :button, :onclick => raw("javascript:location.href = '" + work_kinds_path + "';") %>
 </div>
<% end %>
