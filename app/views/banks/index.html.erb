<h1>金融機関マスタ一覧</h1>
<% if @banks.count > 0 %>
<table class="list">
  <thead>
    <tr>
      <th>コード</th>
      <th>名称</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @banks.each do |bank| %>
      <tr>
        <td><%= bank.code %></td>
        <td><%= bank.name %></td>
        <td><%= link_to '修正', edit_bank_path(bank) %></td>
        <td><%= link_to '支店', bank_branches_path(bank_code: bank.code) %></td>
        <td><%= link_to '削除', bank, method: :delete, data: { confirm: '本当に削除してもよろしいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<%= link_to "新規登録", new_bank_path, {class: "btn btn-success"}%>
<%= link_to "戻る", menu_index_path, {class: "btn btn-outline-dark"}%>
