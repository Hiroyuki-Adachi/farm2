<div id="container py-5" class="container">
    <div class="row">
        <div class="col-md-12">
            <% if flash[:danger] %>
            <div class="alert alert-danger"><%= h(flash[:danger]) %></div>
            <% end %>
            <h2 class="text-center text-white mb-4">ユーザーIDとパスワードを入力してください。</h2>
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <!-- form card login -->
                    <div class="card rounded-0">
                        <div class="card-header">
                            <h3 class="mb-0">ログイン</h3>
                        </div>
                        <div class="card-body">
                            <%= form_tag(action: :create) do %>
                                <div class="form-group">
                                    <label for="uname1">ユーザID</label>
                                    <%= text_field_tag :login_name, "", {maxlength: 12, required: true, class: "form-control form-control-lg rounded-0", placeholder: "初期値は携帯番号です。" } %>
                                </div>
                                <div class="form-group">
                                    <label>パスワード</label>
                                    <%= password_field_tag :password, "", {required: true, class: "form-control form-control-lg rounded-0", placeholder: "初期値は番地です。", autocomplete: "new-password"} %>
                                </div>
                                <%= submit_tag '認証する', class: "btn btn-success btn-lg float-right" %>
	                        <% end %>
                        </div>
                        <!--/card-block-->
                    </div>
                    <!-- /form card login -->
                </div>
            </div>
            <!--/row-->
        </div>
        <!--/col-->
    </div>
    <!--/row-->
</div><!-- /#container -->
