<%= form_tag broccoli_reports_path, {id: "search_form", method: :get} do %>
  <div class="row">
    <div class="col-md-4">
        <h1>ブロッコリー月報</h1>
    </div>
    <div class="col-md-3">
        <div class="form-inline">
        <label for="worked_at" class="h5 form-label">年月</label>
        <%= select_tag(:worked_at, options_for_select(@months, selected: @month), {class: "form-select"}) %>
        </div>
    </div>
  </div>
<% end %>
<div class="row">
  <table id="tbl_list" class="table table-sm">
    <thead>
      <tr>
        <th>作業日</th>
        <th>氏名</th>
        <th>場所</th>
        <th>内容</th>
        <th>時間</th>
        <th>詳細</th>
        <th>備考</th>
        <th></th>
      </tr>
    </thead>
    <tbody id="list">
       <%= render partial: "list" %>
    </tbody>
  </table>
</div>
<div id="btn_toolbar" class="btn-toolbar">
  <div class="btn-group mr-2">
    <%= link_to '戻る', menu_index_path, class: "btn btn-outline-dark" %>
  </div>
</div>
<% content_for :head do %>
<script>
window.addEventListener('DOMContentLoaded turbo:load', function() {
    $("#worked_at").change(function() {
        $("#search_form").submit();
    });
});
</script>
<% end %>
