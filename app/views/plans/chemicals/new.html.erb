<h1>薬剤計画(有無)</h1>
<%= form_with url: plans_chemicals_path, method: :post do |f| %>
  <div class="row">
    <table class="table table-sm">
      <thead>
        <tr>
          <th>種別</th>
          <th>名称</th>
          <th>来年度(田植えでの)使用</th>
        </tr>
      </thead>
      <tbody>
        <% @chemicals.each do |chemical| %>
          <tr>
            <td><%= chemical.chemical_type.name %></td>
            <td><%= chemical.name %></td>
            <td>
              <%= check_box_tag "chemicals[]", chemical.id, ChemicalTerm.exists?(term: current_term + 1, chemical_id: chemical.id), {class: "form-check-input", id: nil} %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div id="btn_toolbar" class="btn-toolbar">
    <div class="btn-group mr-2">
      <%= submit_tag '登録', name: 'regist', class: "btn btn-warning" %>
    </div>
    <div class="btn-group mr-2">
      <%= link_to '戻る', menu_index_path, class: "btn btn-outline-dark" %>
    </div>
  </div>
<% end %>
