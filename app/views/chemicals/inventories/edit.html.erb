<h1>棚卸情報更新</h1>
<%= error_print(@inventory) %>
<% stock_system = System.get_system(@inventory.checked_on) %>
<%= form_with model: @inventory, url: chemicals_inventory_path(@inventory)  do |f| %>
 <div class="row">
    <div class="field form-group col-md-3">
      <%= f.label :checked_on, class: "col-form-label-lg" %>
      <%= f.date_field :checked_on, {
          required: true, min: stock_system.start_date, max: stock_system.end_date, class: "form-control"}
    %>
    </div>
    <div class="field form-group col-md-6">
      <%= f.label :name, class: "col-form-label-lg" %>
      <%= f.text_field :name, {required: true, maxlength: 20, class: "form-control"} %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-sm table-bordered">
        <thead>
          <tr>
            <th>種別</th>
            <th>薬品</th>
            <th>在庫量(単位)</th>
            <th>削除</th>
          </tr>
        </thead>
        <tbody>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="btn-toolbar">
      <div class="btn-group mr-2">
        <%= f.submit '登録', class: "btn btn-warning" %>
      </div>
      <div class="btn-group mr-2">
        <%= link_to "戻る", chemicals_inventories_path, {class: "btn btn-outline-dark"}%>
      </div>
    </div>
  </div>
<% end %>
