<%= error_print(@chemical) %>
<%= form_for(@chemical) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, {:maxlength => 30, :size => 40} %>
  </div>
  <div class="field">
    <%= f.label :chemical_type_id %><br />
    <%= f.select(:chemical_type_id, @chemical_types.map {|chemical_type| [chemical_type.name, chemical_type.id]}) %><br />
  </div>
  <div class="field">
   <span class="check_group"><%= f.check_box :this_term_flag, {}, true, false %><%= f.label :this_term_flag %></span>
  </div>
  <br />
  <div class="actions">
    <%= f.submit '登録' %>
    <%= button_tag "戻る", type: :button, :onclick => raw("javascript:location.href = '" + chemicals_path + "';") %>
  </div>
<% end %>
