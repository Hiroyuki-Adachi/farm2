<%= error_print(@chemical) %>
<%= form_for(@chemical) do |f| %>
  <div class="row">
    <div class="field form-group col-md-3">
      <%= f.label :name, class: "col-form-label-lg" %>
      <%= f.text_field :name, {:maxlength => 30, :size => 40, required: true, class: "form-control"} %>
    </div>
    <div class="field form-group col-md-3">
      <%= f.label :chemical_type_id, class: "col-form-label-lg" %>
      <%= f.select(:chemical_type_id, @chemical_types.map {|chemical_type| [chemical_type.name, chemical_type.id]}, {}, {class: "form-control"}) %>
    </div>
  </div>
  <div class="row">
    <div class="field form-group col-md-3">
      <%= f.label :phonetic, class: "col-form-label-lg" %>
      <%= f.text_field :phonetic, {maxlength: 40, size: 40, pattern: "[\u3041-\u3096\uFF21-\uFF3A\dー]*", required: true, class: "form-control"} %>
    </div>
    <div class="field form-group col-md-3">
      <div class="form-check form-check-inline">
        <%= f.check_box :this_term_flag, {class: "form-check-input"}, true, false %>
        <%= f.label :this_term_flag, {class: "form-check-label"} %>
      </div>
    </div>
    <div class="field form-group col-md-6">
      <div class="form-check form-check-inline">
        <%= f.label :base_unit_id, class: "col-form-label-lg" %><br />
        <%= f.select(:base_unit_id, @base_units.map {|base_unit| [base_unit.name, base_unit.id]}, {}, {class: "form-control"}) %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="field form-group col-md-3">
      <%= f.label :unit, class: "col-form-label-lg" %>
      <%= f.text_field :unit, {:maxlength => 2, :size => 4, required: true, class: "form-control"} %>
    </div>
    <div class="field form-group col-md-3">
      <%= f.label :base_quantity, class: "col-form-label-lg" %>
      <%= f.number_field :base_quantity, {required: true, class: "form-control", max: 999999, min: 0 } %>
    </div>
    <div class="field form-group col-md-3">
      <%= f.label :carton_unit, class: "col-form-label-lg" %>
      <%= f.text_field :carton_unit, {:maxlength => 2, :size => 4, required: true, class: "form-control"} %>
    </div>
    <div class="field form-group col-md-3">
      <%= f.label :carton_quantity, class: "col-form-label-lg" %>
      <%= f.number_field :carton_quantity, {required: true, class: "form-control", max: 999999, min: 0 } %>
    </div>
  </div>
  <div class="row">
    <div class="btn-toolbar">
      <div class="btn-group mr-2">
        <%= f.submit '登録', class: "btn btn-warning" %>
      </div>
      <% unless @chemical.new_record? %>
        <div class="btn-group mr-2">
          <%= link_to '削除', @chemical, {method: :delete, data: {confirm: "本当に削除してもよろしいですか?"}, class: "btn btn-danger"} %>
        </div>
      <% end %>
      <div class="btn-group mr-2">
        <%= link_to "戻る", chemicals_path, {class: "btn btn-outline-dark"}%>
      </div>
    </div>
  </div>
<% end %>
