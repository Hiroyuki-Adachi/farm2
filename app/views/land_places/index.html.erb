<h1>場所マスタ一覧</h1>
<% if @land_places.count > 0 %>
<table class="table table-sm">
  <thead>
    <tr>
      <th>場所</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @land_places.each do |land_place| %>
      <tr>
        <td><%= land_place.name %></td>
        <td><%= link_to '修正', edit_land_place_path(land_place), {class: "btn btn-success btn-sm"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<div class="btn-toolbar">
  <div class="btn-group mr-2">
    <%= link_to '新規登録', new_land_place_path, class: "btn btn-success" %>
  </div>
  <div class="btn-group mr-2">
    <%= link_to '戻る', menu_index_path, class: "btn btn-outline-dark" %>
  </div>
</div>
