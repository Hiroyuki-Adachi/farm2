<%= error_print(@land_place) %>
<%= form_with(model: @land_place) do |f| %>
<div class="row">
  <div class="mb-3 col-md-3">
    <%= f.label :name, class: "col-form-label-lg form-label" %>
    <%= f.text_field :name, {required: true, class: "form-control", maxlength: 40} %>
  </div>
  <div class="mb-3 col-md-2">
    <%= f.label :display_order, class: "col-form-label-lg form-label" %>
    <%= f.number_field :display_order, {required: true, class: "form-control", min: 0, max: 9999, maxlength: 4} %>
  </div>
</div>
<div class="row">
  <div class="mb-3 col-md-8">
    <%= f.label :remarks, class: "col-form-label-lg form-label" %>
    <%= f.text_area :remarks, {:rows => 3, :cols => 40, class: "form-control"} %>
  </div>
</div>
<div class="btn-toolbar">
  <div class="btn-group mr-2">
    <%= f.submit '登録', class: "btn btn-warning" %>
  </div>
  <% unless @land_place.new_record? %>
    <div class="btn-group mr-2">
      <%= link_to '削除', @land_place, {data: {turbo_confirm: "本当に削除してもよろしいですか?", turbo_method: :delete}, class: "btn btn-danger"} %>
    </div>
  <% end %>
  <div class="btn-group mr-2">
    <%= link_to "戻る", land_places_path, class: "btn btn-outline-dark" %>
  </div>
</div>
<% end %>
