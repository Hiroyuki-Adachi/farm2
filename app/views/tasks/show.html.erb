<h1 class="mb-4">タスク詳細</h1>

<div class="card shadow-sm mb-3">
  <div class="card-body">
    <h4 class="mb-2">タスク名：
      <%= turbo_frame_tag "task_title" do %>
        <%= render "tasks/titles/show", task: task %>
      <% end %>
      <%= turbo_frame_tag "task_priority" do %>
        <%= render "tasks/priorities/show", task: task %>
      <% end %>
    </h4>

    <div class="row g-3">
      <div class="col-md-4 text-muted mb-3">
        <span class="h5">作成者:</span> <%= task.creator_name %> /
        <span class="h5">担当者:</span>
        <%= turbo_frame_tag "task_assignee" do %>
          <%= render "tasks/assignees/show", task: task %>
        <% end %>
      </div>

      <div class="col-md-4">
        <span class="h5">期限:</span>
        <%= turbo_frame_tag "task_due_on" do %>
          <%= render "tasks/due_dates/show", task: task %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- 説明（Markdown表示 + 小編集） -->
<div class="card shadow-sm">
  <div class="card-body">
    <h6 class="text-muted mb-2">説明</h6>
    <%= turbo_frame_tag dom_id(@task, :description) do %>
      <div class="mb-2">
        <%= markdown_to_html(@task.description).html_safe %>
      </div>
      <%= link_to "編集", "#", class: "btn btn-sm btn-outline-primary",
            data: { action: "click->toggle#show", target: dom_id(@task, :description_form) } %>
      <div id="<%= dom_id(@task, :description_form) %>" hidden>
        <%= render "tasks/descriptions/inline", task: @task %>
      </div>
    <% end %>
  </div>
</div>
<div class="btn-toolbar">
  <% if @task.deletable?(current_user) %>
    <div class="btn-group mr-2">
      <%= link_to '削除', @task, {data: {turbo_confirm: "本当に削除してもよろしいですか?", turbo_method: :delete}, class: "btn btn-danger"} %>
    </div>
  <% end %>
  <div class="btn-group mr-2">
    <%= link_to '戻る', tasks_path, {class: "btn btn-outline-dark"} %>
  </div>
</div>
