<tr id="<%= dom_id(task) %>">
  <td><%= link_to task.title, task_path(task), data: { turbo_frame: "_top" } %></td>
  <td><%= task.priority_badge %></td>
  <td><%= l(task.due_on) if task.due_on %><%= task.due_badge %></td>
  <td><%= task.status_badge %></td>
  <td><%= task.office_role_name %></td>
  <td><%= task.assignee&.name %></td>
</tr>
