<% watcher = @task.watching_by(current_user)%>
<% if watcher %>
  <div class="btn-group mr-2">
    <%= link_to '監視から外す', task_watcher_path(task_id: @task, id: watcher), {data: {loading: false, turbo_confirm: "監視から除外してもよろしいですか?", turbo_method: :delete}, class: "btn btn-outline-danger"} %>
  </div>
<% else %>
  <div class="btn-group mr-2">
    <%= link_to '監視する', task_watchers_path(task_id: @task), {data: {turbo_method: :post}, class: "btn btn-primary"} %>
  </div>
<% end %>
