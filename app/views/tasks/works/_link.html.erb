<% if task.status == TaskStatus::DOING %>
  <div class="btn btn-sm btn-outline-primary" role="button"
      data-bs-toggle="modal"
      data-bs-target="#<%= dom_id(task, :work_link_modal) %>">
    日報を紐づけ
  </div>
  <div class="modal fade"
      id="<%= dom_id(task, :work_link_modal) %>"
      tabindex="-1" aria-hidden="true"
      data-controller="modal-reset"
      data-modal-reset-frame-id-value="work_link_modal_frame"
      data-modal-reset-frame-src-value="<%= task_works_path(task) %>">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">日報を紐づけ</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="閉じる"></button>
        </div>
        <div class="modal-body">
          <%= turbo_frame_tag "work_link_modal_frame", src: task_works_path(task), loading: "lazy" %>
        </div>
        <div class="modal-footer">
          <button class="btn btn-secondary" data-bs-dismiss="modal">閉じる</button>
        </div>
      </div>
    </div>
  </div>
<% end %>
