<%= error_print(@machine_type) %>
<%= form_with(model: @machine_type) do |f| %>
<div class="row">
 <div class="col-md-3 mb-3">
    <%= f.label :name, class: "col-form-label-lg form-label" %>
    <%= f.text_field :name, {maxlength: 20, size: 20, required: true, class: "form-control"} %>
 </div>
 <div class="col-md-3 mb-3">
    <%= f.label :display_order, class: "col-form-label-lg form-label" %>
    <%= f.number_field(:display_order, {min: 0, max: 9999, maxlength: 4, size: 4, required: true, class: "form-control"}) %>
 </div>
 <div class="col-md-3 mb-3">
    <%= f.label :code, class: "col-form-label-lg form-label" %>
    <%= f.text_field :code, {maxlength: 1, required: false, class: "form-control"} %>
 </div>
</div>
<div class="row">
 <div class="col-md-12">
  <fieldset>
      <legend>対応作業</legend>
      <% @work_kinds.each do |work_kind| %>
        <div class="form-check form-check-inline">
          <%= check_box_tag "work_kinds[]", work_kind.id, @machine_type.work_kinds.include?(work_kind), {id: "work_kind_#{work_kind.id}", class: "form-check-input"} %>
          <%= label_tag "work_kind_#{work_kind.id}", work_kind.name, {class: "form-check-label"} %>
        </div>
      <% end %>
    </fieldset>
 </div>
</div>
<div class="btn-toolbar">
  <div class="btn-group mr-2">
    <%= f.submit '登録', class: "btn btn-warning" %>
  </div>
  <div class="btn-group mr-2">
    <%= link_to '戻る', machine_types_path, class: "btn btn-outline-dark" %>
  </div>
</div>
<% end %>
