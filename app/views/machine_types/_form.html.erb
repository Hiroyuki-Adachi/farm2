<%= error_print(@machine_type) %>
<%= form_for(@machine_type) do |f| %>
 <div class="field form-group">
    <%= f.label :name, class: "col-form-label-lg" %>
    <%= f.text_field :name, {maxlength: 20, size: 20, required: true, class: "form-control"} %>
 </div>
 <div class="field form-group">
    <%= f.label :display_order, class: "col-form-label-lg" %>
    <%= f.number_field(:display_order, {min: 0, max: 9999, maxlength: 4, size: 4, required: true, class: "form-control"}) %>
 </div>
 <div class="field form-group">
 <fieldset>
    <legend>対応作業</legend>
    <% @work_kinds.each do |work_kind| %>
      <div class="form-check form-check-inline">
        <%= check_box_tag "work_kinds[]", work_kind.id, @machine_type.work_kinds.include?(work_kind), {id: "work_kind_#{work_kind.id}", class: "form-check-input"} %>
        <%= label_tag "work_kind_#{work_kind.id}", work_kind.name, {class: "form-check-label"} %>
      </div>
    <% end %>
  </fieldset>
 </div>
 <div class="actions">
    <%= f.submit '登録', class: "btn btn-warning" %>
    <%= button_tag "戻る", type: :button, :onclick => raw("javascript:location.href = '" + machine_types_path + "';"), class: "btn btn-default" %>
 </div>
<% end %>
