<h1><%= @machine.usual_name %>料金一覧</h1>
<%= render(:partial => "show") %>
<div class="btn-toolbar">
  <div class="btn-group mr-2">
    <%= link_to '料金新規登録', new_machine_price_header_path(machine_id: @machine), class: "btn btn-success" %>
  </div>
<% if @machine_price %>
  <div class="btn-group mr-2">
    <%= button_tag "変更",  type: :button, :onclick => raw("javascript:location.href = '" + edit_machine_price_header_path(@machine_price) + "';"), class: "btn btn-success" %>
  </div>
<% end %>
  <div class="btn-group mr-2">
    <%= button_tag "戻る",  type: :button, :onclick => raw("javascript:location.href = '" + machines_path + "';"), class: "btn btn-default" %>
  </div>
</div>
