<h1>作業予定(議事録)一覧</h1>
<div id="list" class="wrapper" style="overflow-y: scroll; width: 100%;">
  <table id="minutes_list" class="table table-sm">
    <thead>
      <tr>
        <th>開催(予定)日</th>
        <th>内容</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @schedules.each do |schedule| %>
        <tr>
          <td><%= schedule.worked_at %></td>
          <td><%= schedule.name %></td>
          <% if schedule.minute %>
          <td></td>
          <td><%= link_to '照会', minute_path(schedule.minute.id), {class: "btn btn-success btn-sm", target: :_blank, data: {turbolinks: false}} %></td>
          <td><%= link_to '削除', minute_path(id: schedule.minute.id), {data: {confirm: "議事録を削除してもよろしいですか?", turbo_method: :delete}, class: "btn btn-danger btn-sm"} %></td>
          <% else %>
          <td><%= button_tag "作成", {id: nil, type: :button, class: "btn btn-success btn-sm", onclick: "createPDF(#{schedule.id})"} %></td>
          <td></td>
          <td></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= form_for(Minute.new) do |f| %>
  <%= f.hidden_field(:schedule_id) %>
  <%= f.file_field(:pdf, {style: "display: none;"}) %>
<% end %>
<div class="btn-toolbar">
  <div class="btn-group mr-2">
    <%= link_to "戻る", menu_index_path, {class: "btn btn-outline-dark"}%>
  </div>
</div>
<script type="text/javascript">
document.addEventListener("turbo:load", function() {
    $("#minutes_list").floatThead({
        position: 'absolute',
        scrollContainer:true,
        zIndex: 999
    });
    $(window).resize(function() {
        setTableWrapperHeight();
    });

    $("#minute_pdf").change(function() {
        $(this).closest("form").submit();
    });

    setTableWrapperHeight();
});

function setTableWrapperHeight() {
    if($("#table_wrapper")[0]) {
        $("#table_wrapper").height($(window).height() - $("#table_wrapper").offset().top - $("#btn_toolbar").height() - 10);
    }
}

function createPDF(schedule_id) {
    $("#minute_schedule_id").val(schedule_id);
    $("#minute_pdf").click();
}
</script>
