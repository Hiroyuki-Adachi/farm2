<h1 data-controller="page-loader" data-page-loader-modules-value="pages/lands-cards">土地カルテ</h1>
<div class="row">
  <div class="col-md-12">
    <div id="map" class="ratio ratio-21x9"></div>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <h3 id="land_info"></h3>
  </div>
  <div class="col-md-6">
    <h3>&nbsp;</h3>
  </div>
</div>
<%= hidden_field_tag :location, "[#{current_location}]" %>
<%= hidden_field_tag :organization_name, current_organization.name %>
<%= hidden_field_tag :show_path, lands_card_path(land_id: 0) %>
<% @costs.each do |cost| %>
  <%= land_region_hidden_field(cost.land, color: cost.work_type.bg_color) %>
<% end %>
<div id="btn_toolbar" class="btn-toolbar">
  <div class="btn-group mr-2">
    <%= link_to '戻る', menu_index_path, class: "btn btn-outline-dark" %>
  </div>
</div>
