<div class="row">
  <div class="col-md-8">
    <h1>土地グループ一覧</h1>
  </div>
</div>
<% if @lands.count > 0 %>
<table class="table table-sm">
  <thead>
    <tr>
      <th>場所</th>
      <th>地番</th>
      <th>地図</th>
      <th style="text-align:right;">耕作面積(α)</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @lands.each do |land| %>
    <tr style="<%= 'background-color:darkgray' unless land.target_flag %>">
      <td><%= land.place_name %></td>
      <td><%= land.place %></td>
      <td><%= land.region.present? ? "◯" : "" %></td>
      <td class="numeric"><%= land.area %></td>
      <td><%= link_to '修正', edit_lands_group_path(land), {class: "btn btn-success btn-sm"} %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= paginate(@lands) %>
<% end %>
<div class="btn-toolbar">
  <div class="btn-group mr-2">
    <%= link_to '新規登録', new_lands_group_path, {class: "btn btn-success"} %>
  </div>
  <div class="btn-group mr-2">
    <%= link_to '戻る', menu_index_path, {class: "btn btn-outline-dark"} %>
  </div>
</div>
