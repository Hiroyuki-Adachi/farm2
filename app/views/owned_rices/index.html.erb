<div class="row">
  <div class="col-md-8">
    <h1>保有米一覧(<%= current_term %>年度)</h1>
  </div>
</div>
<table class="table table-sm table-bordered">
  <colgroup>
    <col />
    <col span="<%= @owned_prices.size + 1 %>" style="background-color: aliceblue" />
    <col span="<%= @relative_prices.size + 1 %>" style="background-color: honeydew" />
    <col span="<%= @owned_prices.size %>" style="background-color: lemonchiffon" />
    <col style="background-color: mistyrose" />
    <col />
  </colgroup>
  <thead>
    <tr>
      <th rowspan="2">世帯</th>
      <th colspan="<%= @owned_prices.size + 1 %>">保有米</th>
      <th colspan="<%= @relative_prices.size + 1 %>">縁故米</th>
      <th colspan="<%= @owned_prices.size %>">合計</th>
      <th rowspan="2">合計</th>
      <th rowspan="2"></th>
    </tr>
    <tr>
      <% @owned_prices.each do |owned_price| %>
        <th><%= owned_price.name %></th>
      <% end %>
      <th>小計</th>
      <% @relative_prices.each do |relative_price| %>
        <th><%= relative_price.name %></th>
      <% end %>
      <th>小計</th>
      <% @owned_prices.each do |owned_price| %>
        <th><%= owned_price.name %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% total_owned_count = {} %>
    <% total_relative_count = {} %>
    <% @homes.each do |home| %>
      <tr>
        <th><%= home.name %></th>
        <% total_count = 0 %>
        <% @owned_prices.each do |owned_price| %>
          <% owned_rice = @owned_rices.find {|o| o.home_id == home.id && o.owned_rice_price_id == owned_price.id} %>
          <td class="numeric"><%= owned_rice&.owned_count || 0 %></td>
          <% total_count += (owned_rice&.owned_count || 0) %>
          <% total_owned_count[owned_price.id] = (total_owned_count[owned_price.id] ? total_owned_count[owned_price.id] : 0) + (owned_rice&.owned_count || 0) %>
        <% end %>
        <td class="numeric"><%= total_count %></td>

        <% total_count = 0 %>
        <% @relative_prices.each do |relative_price| %>
          <% owned_rice = @owned_rices.find {|o| o.home_id == home.id && o.owned_rice_price_id == relative_price.id} %>
          <td class="numeric"><%= owned_rice&.relative_count || 0 %></td>
          <% total_count += (owned_rice&.relative_count || 0) %>
          <% total_relative_count[relative_price.id] = (total_relative_count[relative_price.id] ? total_relative_count[relative_price.id] : 0) + (owned_rice&.relative_count || 0) %>
        <% end %>
        <td class="numeric"><%= total_count %></td>

        <% total_count = 0 %>
        <% @owned_prices.each do |owned_price| %>
          <% owned_rice = @owned_rices.find {|o| o.home_id == home.id && o.owned_rice_price_id == owned_price.id} %>
          <td class="numeric"><%= owned_rice&.sum_count || 0 %></td>
          <% total_count += (owned_rice&.sum_count || 0) %>
        <% end %>
        <td class="numeric"><%= total_count %></td>
        <td><%= link_to '修正', edit_owned_rice_path(id: home.id), {class: "btn btn-success btn-sm"} %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot style="background-color: mistyrose">
    <tr>
      <th>合計</th>
      <% total_count = 0 %>
      <% @owned_prices.each do |owned_price| %>
        <td class="numeric"><%= total_owned_count[owned_price.id] %></td>
        <% total_count += total_owned_count[owned_price.id] %>
      <% end %>
      <td class="numeric"><%= total_count %></td>

      <% total_count = 0 %>
      <% @relative_prices.each do |relative_price| %>
        <td class="numeric"><%= total_relative_count[relative_price.id] %></td>
        <% total_count += total_relative_count[relative_price.id] %>
      <% end %>
      <td class="numeric"><%= total_count %></td>

      <% total_count = 0 %>
      <% @owned_prices.each do |owned_price| %>
        <% sum_count = total_owned_count[owned_price.id] + (total_relative_count[owned_price.id] || 0) %>
        <td class="numeric"><%= sum_count %></td>
        <% total_count += sum_count %>
      <% end %>
      <td class="numeric"><%= total_count %></td>
      <td></td>
    </tr>
  </tfoot>
</table>
