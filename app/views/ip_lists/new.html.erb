<!-- app/views/ip_lists/new.html.erb -->
<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>作業日報管理システム(V2)</title>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
</head>
<body>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <h1 class="text-center my-4">ID確認</h1>
        <%= form_with url: ip_lists_path, class: "needs-validation", method: :post do |form| %>
          <div class="mb-3">
            <%= form.text_field :login_name, maxlength: 12, required: true, class: "form-control form-control-lg rounded-0" %>
          </div>
          <div class="d-grid">
            <%= form.submit "送信", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</body>
</html>
