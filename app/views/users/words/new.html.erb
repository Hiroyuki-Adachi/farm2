<h1>ニュース検索ワード</h1>
<%= form_with(model: current_user, url: users_words_path, local: true, method: :post) do |form| %>
  <%= form.fields_for :user_words, form.object.user_words.first(5) do |word_form| %>
    <div class="form-group">
      <%= word_form.text_field :word, class: "form-control", maxlength: 10, pattern: ".{2,10}"  %>
      <%= word_form.hidden_field :pc_flag, value: false, id: nil %>
      <%= word_form.check_box :pc_flag, {class: "form-check-input"}, true, false %>
      <%= word_form.label :pc_flag, class: "form-check-label" %>
      <%= word_form.hidden_field :sp_flag, value: false, id: nil %>
      <%= word_form.check_box :sp_flag, {class: "form-check-input"}, true, false %>
      <%= word_form.label :sp_flag, class: "form-check-label" %>
      <%= word_form.hidden_field :line_flag, value: false, id: nil %>
      <%= word_form.check_box :line_flag, {class: "form-check-input"}, true, false %>
      <%= word_form.label :line_flag, class: "form-check-label" %>
      <%= word_form.hidden_field :id %>
    </div>
  <hr />
  <% end %>
  <div id="btn_toolbar" class="btn-toolbar">
<% if current_user.worker.director? %>
    <div class="btn-group mr-2">
      <%= form.submit '登録', name: 'regist', class: "btn btn-warning" %>
    </div>
<% end %>
    <div class="btn-group mr-2">
      <%= link_to '戻る', menu_index_path, class: "btn btn-outline-dark" %>
    </div>
  </div>
<% end %>
