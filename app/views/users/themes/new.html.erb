<h1>画面テーマ変更</h1>
<%= error_print(@user) %>
<%= form_with(model: @user, url: users_themes_path, method: :post) do |f| %>
<div class="row">
  <div class="col-md-3">
    <div class="field mb-3">
      <%= f.label :theme, class: "col-form-label-lg form-label" %>
      <%= f.select(:theme, enum_options_for(User, :theme), {}, class: "form-select") %>
    </div>
  </div>
</div>
<div class="btn-toolbar">
  <div class="btn-group mr-2">
    <%= f.submit '登録', class: "btn btn-warning" %>
  </div>
  <div class="btn-group mr-2">
    <%= link_to '戻る', menu_index_path, {class: "btn btn-outline-dark"} %>
  </div>
</div>
<% end %>
