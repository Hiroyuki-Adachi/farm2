<h1>顔登録</h1>
<div class="row">
  <div class="col-md-8">
    <video id="face" class="border mb-3" width="720" height="560" autoplay muted></video>
  </div>
  <div class="col-md-4">
    <div id="log" readonly="readonly"></div>
  </div>
</div>
<div class="btn-toolbar">
  <div class="btn-group mr-2">
    <%= button_tag '開始', class: "btn btn-warning", id: "start_capture" %>
  </div>
  <div class="btn-group mr-2">
    <%= button_tag '終了', class: "btn btn-danger", id: "stop_camera" %>
  </div>
  <div class="btn-group mr-2">
    <%= link_to '戻る', menu_index_path, class: "btn btn-outline-dark" %>
  </div>
</div>
<%= hidden_field_tag :face_create_path, users_faces_path %>
<% content_for :head do %>
<%= javascript_include_tag 'controllers/user-face', "data-turbo-track": "reload", type: :module %>
<% end %>
