<div class="row">
  <div class="col-md-12">
    <h1>清掃(動物・害虫駆除)記録登録</h1>
  </div>
</div>
<div class="row">
  <div class="col-md-3">
    <h4><%= @work.worked_at %></h4>
    <h5><%= @work.name %></h5>
  </div>
  <div class="col-md-3">
    <%= @work.remarks %>
  </div>
  <div class="col-md-6">
  <%= @work.worker_names %>
  </div>
</div>
<hr>
<%= error_print(@cleaning) %>
<%= form_with model: @cleaning, url: gaps_cleaning_path(@work.model), method: :put do |f| %>
  <div class="row">
    <div class="col-md-2 form-check-inline">
      <%= f.check_box :cleaning_flag, {class: "form-check-input"}, true, false %>
      <%= f.label :cleaning_flag, class: "col-form-label-lg form-label" %>
    </div>
    <div class="col-md-2 form-check-inline">
      <%= f.check_box :animal_flag, {class: "form-check-input"}, true, false %>
      <%= f.label :animal_flag, class: "col-form-label-lg form-label" %>
    </div>
    <div class="col-md-2 form-check-inline">
      <%= f.check_box :pest_flag, {class: "form-check-input"}, true, false %>
      <%= f.label :pest_flag, class: "col-form-label-lg form-label" %>
    </div>
  </div>
  <div class="row">
    <div class="field mb-3 col-md-3">
      <%= f.label :target, class: "col-form-label-lg form-label" %>
      <%= f.text_field :target, {maxlength: 20, required: false, class: "form-control"} %>
    </div>
    <div class="field mb-3 col-md-3">
      <%= f.label :method, class: "col-form-label-lg form-label" %>
      <%= f.text_field :method, {maxlength: 20, required: false, class: "form-control"} %>
    </div>
  </div>
  <div class="btn-toolbar">
    <div class="btn-group mr-2">
      <%= f.submit '登録', class: "btn btn-warning" %>
    </div>
    <div class="btn-group mr-2">
      <%= link_to "戻る", gaps_cleanings_path, {class: "btn btn-outline-dark"}%>
    </div>
  </div>
<% end %>
