<div class="row">
  <div class="col-md-12">
    <h1>研修実績照会</h1>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <h2>研修情報</h2>
  </div>
</div>
<%= render partial: "work" %>
<hr />
  <div class="row">
    <div class="col-md-12">
      <%= label_tag :training_types, Training.human_attribute_name(:training_types), class: "col-form-label-lg form-label" %>
      <br>
      <div>
        <%= @training.training_types.pluck(:name).join('、') %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <%= label_tag :training_content, Training.human_attribute_name(:content), class: "col-form-label-lg form-label" %>
      <div class="h5"><%= @training.content %></div>
    </div>
    <div class="col-md-3">
      <%= label_tag :training_place, Training.human_attribute_name(:training_place), class: "col-form-label-lg form-label" %>
      <div class="h5"><%= @training.training_place %></div>
    </div>
    <div class="col-md-6">
      <%= label_tag :training_document, Training.human_attribute_name(:document), class: "col-form-label-lg form-label" %>
      <div class="h4"><%= @training.document %></div>
    </div>
  </div>
  <hr />
  <div class="row">
    <div class="col-md-6">
      <h2>勉強会(<%= @training.studied? ? "あり" : "なし" %>)</h2>
    </div>
  </div>
<% if @training.studied? %>
  <div class="row">
    <div class="col-md-3">
      <%= label_tag :studied_on, Training.human_attribute_name(:studied_on), class: "col-form-label-lg form-label" %>
      <div class="h4"><%= @work.training_studied_on %></div>
      <div class="h4"><%= @training.study.start_at.strftime("%H:%M") %>～<%= @training.study.end_at.strftime("%H:%M") %></div>
    </div>
    <div class="col-md-6">
      <%= label_tag :studying_place, Training.human_attribute_name(:studying_place), class: "col-form-label-lg form-label" %>
      <div class="h4"><%= @training.studying_place %></div>
    </div>
    <div class="col-md-3">
      <%= label_tag :teacher_id, Training.human_attribute_name(:worker_id), class: "col-form-label-lg form-label" %>
      <div class="h4"><%= @training.teacher.name %></div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= label_tag :studied_members, Training.human_attribute_name(:studied_members), class: "col-form-label-lg form-label" %>
      <div class="h5"><%= @training.study.workers.map(&:name).join('、') %></div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= label_tag :studying_remarks, Training.human_attribute_name(:remarks), class: "col-form-label-lg form-label" %>
      <div><%=hbr @training.remarks %></div>
    </div>
  </div>
  <hr />
<% end %>
  <div id="btn_toolbar" class="btn-toolbar">
    <div class="btn-group mr-2">
      <%= link_to '編集', edit_gaps_training_path(@work.id), class: "btn btn-success" %>
    </div>
    <div class="btn-group mr-2">
      <%= link_to '戻る', gaps_trainings_path, class: "btn btn-outline-dark" %>
    </div>
  </div>
