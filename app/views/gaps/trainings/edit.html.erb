<div class="row">
  <div class="col-md-12">
    <h1>研修実績登録</h1>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <h2>研修情報</h2>
  </div>
</div>
<div class="row">
  <div class="col-md-3">
    <label class="col-form-label-lg form-label">受講日</label>
    <div class="h4"><%= @work.worked_at %></div>
  </div>
  <div class="col-md-6">
    <label class="col-form-label-lg form-label">概要</label>
    <div class="h4"><%= @work.name %></div>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <label class="col-form-label-lg form-label">摘要</label>
    <div><%= @work.remarks %></div>
  </div>
</div>
<%= form_with model: @training, url: gaps_training_path(@work), method: :put do |f| %>
<%= error_print(@training) %>
  <div class="row">
    <div class="col-md-3">
      <%= f.label :content, class: "col-form-label-lg form-label" %>
      <%= f.text_field :content, {maxlength: 20, required: false, class: "form-control"} %>
    </div>
    <div class="col-md-3">
      <%= f.label :training_place, class: "col-form-label-lg form-label" %>
      <%= f.text_field :training_place, {maxlength: 20, required: false, class: "form-control"} %>
    </div>
    <div class="col-md-6">
      <%= f.label :document, class: "col-form-label-lg form-label" %>
      <%= f.text_field :document, {maxlength: 40, required: false, class: "form-control"} %>
    </div>
  </div>
  <hr />
  <div class="row">
    <div class="col-md-12">
      <h2>勉強会情報</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <%= f.label :studying_place, class: "col-form-label-lg form-label" %>
      <%= f.text_field :studying_place, {maxlength: 20, required: false, class: "form-control"} %>
    </div>
    <div class="col-md-3">
      <%= f.label :worker_id, class: "col-form-label-lg form-label" %>
      <%= f.select(:worker_id, options_from_collection_for_select(@work.workers, :id, :name, f.object&.worker_id), {}, class: "form-select") %>
    </div>
  </div>
  <hr />
  <div id="btn_toolbar" class="btn-toolbar">
    <div class="btn-group mr-2">
      <%= f.submit '登録', class: "btn btn-warning" %>
    </div>
    <% unless @training.new_record? %>
      <div class="btn-group mr-2">
        <%= link_to '削除', @training, {data: {turbo_confirm: "本当に削除してもよろしいですか?", turbo_method: :delete}, class: "btn btn-danger"} %>
      </div>
    <% end %>
    <div class="btn-group mr-2">
      <%= link_to '戻る', gaps_trainings_path, class: "btn btn-outline-dark" %>
    </div>
  </div>
<% end %>
