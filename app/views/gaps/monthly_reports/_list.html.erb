<table class="table table-sm">
  <thead>
    <tr>
      <th>作業日</th>
      <th>作業者</th>
      <th>場所</th>
      <th>作業内容</th>
      <th>備考</th>
      <th></th>
    </tr>
  </thead>
  <% if @works.present? %>
  <tbody>
    <% @works.each do |work| %>
      <tr>
        <td><%= work.worked_at %></td>
        <td><%= work.gap_worker_names %></td>
        <td><%= work.gap_land_places %></td>
        <td><%= work.gap_work_kind_name %></td>
        <td><%= work.remarks %></td>
        <td><%= link_to "作業日報", work_path(work, back_url: false), {target: :_blank, class: "btn btn-outline-success btn-sm"} %></td>
      </tr>
    <% end %>
  </tbody>
  <% end %>
</table>
