<%= error_print(@home) %>
<%= form_for(@home) do |f| %>
  <div class="row">
    <div class="col-md-3 field form-group">
      <%= f.label :name, class: "col-form-label-lg" %>
      <%= f.text_field :name, {maxlength: 10, size: 15, required: true, class: "form-control"} %>
    </div>
    <div class="col-md-3 field form-group">
      <%= f.label :phonetic, class: "col-form-label-lg" %>
      <%= f.text_field :phonetic, {maxlength: 10, size: 15, required: true, class: "form-control"} %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 field form-group">
      <%= f.label :telephone, class: "col-form-label-lg" %>
      <%= f.telephone_field :telephone, {maxlength: 15, size: 15, class: "form-control"} %>
    </div>
    <div class="col-md-3 field form-group">
      <%= f.label :fax, class: "col-form-label-lg" %>
      <%= f.telephone_field :fax, {maxlength: 15, size: 15, class: "form-control"} %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 field form-group">
      <%= f.label :section_id, class: "col-form-label-lg" %>
      <%= f.select(:section_id, @sections.map {|section| [section.name, section.id]}, {}, {class: "form-control"}) %>
    </div>
    <div class="col-md-2 field form-group">
      <%= f.label :member_flag, class: "col-form-label-lg" %>
      <div class="form-check">
        <%= f.radio_button :member_flag, true, {class: "form-check-input"} %>
        <label for="home_member_flag_true" class="form-check-label">営農組合会員</label>
      </div>
      <div class="form-check">
        <%= f.radio_button :member_flag, false, {class: "form-check-input"} %>
        <label for="home_member_flag_false" class="form-check-label">外部委託</label>
      </div>
    </div>
    <div class="col-md-2 field form-group">
      <%= f.label :owner_flag, class: "col-form-label-lg" %>
      <div class="form-check">
        <%= f.radio_button :owner_flag, true, {class: "form-check-input"} %>
        <label for="home_owner_flag_true" class="form-check-label">可</label>
      </div>
      <div class="form-check">
        <%= f.radio_button :owner_flag, false, {class: "form-check-input"} %>
        <label for="home_owner_flag_false" class="form-check-label">不可</label>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 field form-group">
      <%= f.label :display_order, class: "col-form-label-lg" %>
      <%= f.number_field(:display_order, {maxlength: 4, size: 4, required: true, class: "form-control"}) %>
    </div>
    <div class="col-md-2 field form-group">
      <%= f.label :finance_order, class: "col-form-label-lg" %>
      <%= f.number_field(:finance_order, {maxlength: 4, size: 4, required: false, class: "form-control"}) %>
    </div>
    <div class="col-md-2 field form-group">
      <%= f.label :drying_order, class: "col-form-label-lg" %>
      <%= f.number_field(:drying_order, {maxlength: 4, size: 4, min: 1, required: false, class: "form-control"}) %>
    </div>
    <div class="col-md-2 field form-group">
      <%= f.label :owned_rice_order, class: "col-form-label-lg" %>
      <%= f.number_field(:owned_rice_order, {maxlength: 4, size: 4, min: 1, required: false, class: "form-control"}) %>
    </div>
    <div class="col-md-2 field form-group">
      <%= f.label :seedling_order, class: "col-form-label-lg" %>
      <%= f.number_field(:seedling_order, {maxlength: 4, size: 4, min: 1, required: false, class: "form-control"}) %>
    </div>
  </div>
  <div class="btn-toolbar">
    <div class="btn-group mr-2">
      <%= f.submit '登録', class: "btn btn-warning" %>
    </div>
    <% unless @home.new_record? %>
      <div class="btn-group mr-2">
        <%= link_to '削除', @home, {method: :delete, data: {confirm: "本当に削除してもよろしいですか?"}, class: "btn btn-danger"} %>
      </div>
    <% end %>
    <div class="btn-group mr-2">
      <%= link_to '戻る', homes_path, class: "btn btn-outline-dark" %>
    </div>
  </div>
<% end %>
