<%= error_print(@section) %>
<%= form_with(model: @section) do |f| %>
<div class="field mb-3">
  <%= f.label :name, class: "col-form-label-lg form-label" %>
  <%= f.text_field :name, {maxlength: 40, size: 45, required: true, class: "form-control"} %>
</div>
<div class="field mb-3">
  <%= f.label :display_order, class: "col-form-label-lg form-label" %>
  <%= f.number_field(:display_order, {maxlength: 4, size: 4, required: true, class: "form-control"}) %>
</div>
<div class="field mb-3">
  <%= f.label :work_flag, class: "col-form-label-lg form-label" %>
  <div class="form-check">
    <%= f.radio_button :work_flag, true %>
    <label for="section_work_flag_true" class="form-check-label form-label">作業班</label>
  </div>
  <div class="form-check">
    <%= f.radio_button :work_flag, false %>
    <label for="section_work_flag_false" class="form-check-label form-label">作業班以外</label>
  </div>
</div>
<div class="btn-toolbar">
  <div class="btn-group mr-2">
    <%= f.submit '登録', class: "btn btn-warning" %>
  </div>
  <div class="btn-group mr-2">
    <%= link_to "戻る", sections_path, {class: "btn btn-outline-dark"}%>
  </div>
</div>
<% end %>
