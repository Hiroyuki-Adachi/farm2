<h1>ソリマチ農業簿記インポート</h1>
<% if @error %>
<div class="alert alert-danger" role="alert"><%= @error %></div>
<% end %>
<% if @journals.count > 0 %>
<table class="table table-sm">
  <thead>
    <tr>
      <th>行番号</th>
      <th>仕訳日</th>
      <th>コード</th>
      <th class="numeric">金額</th>
      <th>備考</th>
    </tr>
  </thead>
  <tbody>
  <% @journals.each do |journal| %>
    <tr>
      <td><%= journal.line %></td>
      <td><%= journal.accounted_on || "決算" %></td>
      <td><%= journal.code01 %></td>
      <td class="numeric"><%= number_to_currency(journal.amount1, {precision: 0, unit: ""}) %></td>
      <td><%= journal.remark1 %>／<%= journal.remark3 %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= paginate(@journals) %>
<% end %>
<%= form_with(url: sorimachi_imports_path, html: {multipart: true}) do |f| %>
  <div class="row">
    <div class="col-md-4 form-group">
      <%= file_field_tag :import_file, {class: "custom-file-input", data: {buttonText: "ファイル選択"}} %>
      <%= label_tag :import_file, "インポートファイル", {class: "custom-file-label"} %>
    </div>
  </div>
  <div class="btn-toolbar">
    <div class="btn-group mr-2">
      <%= submit_tag '実行', class: "btn btn-danger" %>
    </div>
    <div class="btn-group mr-2">
      <%= link_to "戻る", menu_index_path, {class: "btn btn-outline-dark"}%>
    </div>
  </div>
<% end %>
